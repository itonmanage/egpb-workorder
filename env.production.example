# Environment Variables สำหรับ Production
# คัดลอกไฟล์นี้เป็น .env.production และแก้ไขค่าให้ตรงกับ server จริง

# Database Connection
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Secret (ใช้สำหรับ authentication)
# สร้าง secret key ใหม่ด้วยคำสั่ง: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Application Settings
NODE_ENV="production"
PORT=3000

# Application URL (ใช้สำหรับ redirect และ CORS)
NEXT_PUBLIC_APP_URL="http://your-server-ip:3000"

# Optional: ถ้ามี external services อื่นๆ
# API_KEY="your-api-key"
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
